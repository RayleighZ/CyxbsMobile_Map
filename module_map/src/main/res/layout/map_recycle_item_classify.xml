<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="6.5dp">

    <Space
        android:id="@+id/space_map_classify_top"
        android:layout_width="match_parent"
        android:layout_height="14.5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/space_map_classify_bottom"
        android:layout_width="match_parent"
        android:layout_height="14.5dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Space
        android:id="@+id/space_map_classify_right"
        android:layout_width="6.5dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_map_classify_name" />

    <com.mredrock.cyxbs.discover.map.view.widget.TypefaceTextView
        android:id="@+id/tv_map_classify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/map_shape_classify_item_selected"
        android:paddingStart="7.5dp"
        android:paddingTop="5.5dp"
        android:paddingEnd="7.5dp"
        android:paddingBottom="5.5dp"
        android:textColor="@color/map_activity_classify_name_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/space_map_classify_bottom"
        app:layout_constraintEnd_toStartOf="@id/space_map_classify_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/space_map_classify_top"
        app:map_typeface="PFSCHTypeface"
        tools:text="入学报到点" />

    <ImageView
        android:id="@+id/iv_map_classify_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map_ic_classify_hot"
        app:layout_constraintBottom_toTopOf="@id/tv_map_classify_name"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>