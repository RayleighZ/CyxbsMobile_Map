<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="23dp"
    android:paddingEnd="23dp">

    <com.mredrock.cyxbs.discover.map.view.widget.TypefaceTextView
        android:id="@+id/tv_map_favorite_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/map_activity_favorite_item_name_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:map_typeface="PFSCMTypeface"
        tools:text="收藏地点1" />

    <View
        android:id="@+id/view_map_favorite_item_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/map_activity_favorite_item_horizontal_line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_map_favorite_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>